{
  "name": "react-ts-vite",
  "version": "0.3.3",
  "description": "Boilerplate react js with typescript and vite",
  "private": true,
  "author": "Emmanuel Nipal <emnnipal@gmail.com>",
  "license": "ISC",
  "scripts": {
    "test": "jest",
    "dev": "vite",
    "build": "rm -rf build && tsc && vite build",
    "preview": "vite preview",
    "check:types": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:fix": "eslint --fix --ext .ts,.tsx ./src",
    "format": "npx prettier --write .",
    "server:start": "cross-env NODE_ENV=production node server/server.js",
    "pm2:start": "pm2 start npm --name 'sample-app-name' -- run server:start",
    "deploy": "npm run build && npm run pm2:start",
    "generate:env": "base64 -w 0 < .env > .env.base64",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/styled-components": "^5.1.24",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vitejs/plugin-react": "^1.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "sass": "^1.49.9",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "vite": "^2.8.6",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-svgr": "^1.1.0",
    "vite-tsconfig-paths": "^3.4.1"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^14.0.0",
    "axios": "^0.26.1",
    "dayjs": "^1.11.0",
    "immer": "^9.0.12",
    "lodash": "^4.17.21",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.2.2",
    "styled-components": "^5.3.5",
    "use-immer": "^0.6.0",
    "yup": "^0.32.11"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "styled-components": "^5"
  }
}